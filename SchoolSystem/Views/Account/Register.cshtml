@using SchoolSystem.ViewModels
@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<!--Using _AdminLayout-->
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="form-container">
    <h2 class="form-header">Register</h2>
    <form asp-action="Register" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="validation-error"></div>

        <!-- Code and name -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Code">Code</label>
                <input asp-for="Code" />
                <span asp-validation-for="Code" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="validation-error"></span>
            </div>
        </div>

        <!-- Email and password -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>
        </div>

        <!-- Confirm passowrd and Address -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <textarea asp-for="Address" rows="2"></textarea>
                <span asp-validation-for="Address" class="validation-error"></span>
            </div>
        </div>

        <!-- Select -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <select asp-for="Gender">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role">Role</label>
                <select asp-for="Role">
                    <option value="">-- Select Role --</option>
                    @foreach (var role in ViewBag.Roles as List<string>)
                    {
                        <option value="@role">@role</option>
                    }
                </select>
                <span asp-validation-for="Role" class="validation-error"></span>
            </div>
        </div>

        <!-- Profile picture -->
        <div class="form-row">
            <div class="form-group" style="width: 100%;">
                <label asp-for="Image">Profile Picture</label>
                <input type="file" asp-for="Image" />
                <span asp-validation-for="Image" class="validation-error"></span>
            </div>
        </div>

        <!-- Button register -->
        <div class="form-footer">
            <input type="submit" value="Register" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
