@model List<Student>

@{
    ViewBag.Title = "Staff Dashboard";
}

<h2>Staff Dashboard</h2>
<h3>Students Without Tutors</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through students without tutors and display them -->
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>
                    <!-- Button to allocate a tutor -->
                    <a href="/Staff/AllocateTutor/@student.Id" class="btn btn-warning">Allocate Tutor</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button for bulk allocation -->
<a href="/Staff/BulkAllocate" class="btn btn-success">Bulk Allocate Tutors</a>