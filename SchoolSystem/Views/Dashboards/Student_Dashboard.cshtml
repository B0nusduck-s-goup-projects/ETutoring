@model List<Interaction>

@{
    ViewBag.Title = "Student Dashboard";
}

<h2>Student Dashboard</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through interactions and display them in a table -->
        @foreach (var interaction in Model)
        {
            <tr>
                <td>@interaction.Date.ToString("dd/MM/yyyy")</td>
                <td>@interaction.Type</td>
                <td>@interaction.Details</td>
            </tr>
        }
    </tbody>
</table>

<!-- Buttons for sending messages and scheduling meetings -->
<a href="/Student/SendMessage" class="btn btn-success">Send Message</a>
<a href="/Student/ScheduleMeeting" class="btn btn-info">Schedule Meeting</a>