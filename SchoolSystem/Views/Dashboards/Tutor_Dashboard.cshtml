@model List<Student>

@{
    ViewBag.Title = "Tutor Dashboard";
}

<h2>Tutor Dashboard</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Last Interaction</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through students and display their details -->
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.LastInteractionDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <!-- Buttons for viewing messages and scheduling meetings -->
                    <a href="/Tutor/ViewMessages/@student.Id" class="btn btn-primary">View Messages</a>
                    <a href="/Tutor/ScheduleMeeting/@student.Id" class="btn btn-info">Schedule Meeting</a>
                </td>
            </tr>
        }
    </tbody>
</table>