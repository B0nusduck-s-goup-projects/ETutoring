<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTutoring</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/6e8637ff15.js" crossorigin="anonymous"></script>
    <script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
</head>
<body>
    @if (!Context.Request.Path.StartsWithSegments("/Admin"))
    {
        <header>
            <div class="top-bar">
                <div class="container">
                    <div class="top-bar-content">
                        <span class="contact-info">
                            <i class="fas fa-phone-alt"></i> Call Us on 028.7300.6622
                        </span>
                        <div class="top-bar-links">
                            <a href="#">News</a>
                            <a href="#">Gallery</a>
                            <a asp-controller="Account" asp-action="ViewProfile">Profile</a>
                             @if (!User.Identity.IsAuthenticated) 
                             { 
                             } 
                             <partial name="_LoginPartial" /> 

                            <button type="button" class="btn-menu"><i class="fa-solid fa-bars"></i></button>
                        </div>

                    </div>
                </div>
            </div>
            <div class="top">
                <div class="container">
                    <div class="header-top row">
                        <a asp-controller="Home" asp-action="IndexUser" class="logo">
                            <img src="https://greenwich.edu.vn/wp-content/uploads/2024/06/2022-Greenwich-Eng-400x200.webp" alt="Greenwich University Logo">
                        </a>
                        <ul class="menu-list">
                            @* <i class="fa-solid fa-xmark"></i> *@
                            <li class="list-item"><a asp-controller="Home" asp-action="IndexUser">HOME</a></li>
                            <li class="list-item"><a href="">ABOUT US</a></li>
                            <li class="list-item"><a asp-controller="Student" asp-action="Event">EVENT</a></li>
                            <li class="list-item"><a asp-controller="Blog" asp-action="Index">BLOG</a></li>
                            <li class="list-item"><a href="">CONTACT US</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>   
    }
    
    @RenderBody()

    @if (!Context.Request.Path.StartsWithSegments("/Admin"))
    {
        <footer>
            <ul class="social-icons">
                <li class="social-item">
                    <a href="#">
                        <div class="icon facebook">
                            <i class="fab fa-facebook-f"></i>
                        </div>
                    </a>
                    <p>Facebook</p>
                </li>
    
                <li class="social-item">
                    <a href="#">
                        <div class="icon instagram">
                            <i class="fab fa-instagram"></i>
                        </div>
                    </a>
                    <p>Instagram</p>
                </li>
    
                <li class="social-item">
                    <a href="#">
                        <div class="icon youtube">
                            <i class="fab fa-youtube"></i>
                        </div>
                    </a>
                    <p>YouTube</p>
                </li>
    
                <li class="social-item">
                    <a href="#">
                        <div class="icon tiktok">
                            <i class="fab fa-tiktok"></i>
                        </div>
                    </a>
                    <p>TikTok</p>
                </li>
            </ul>
            <ul class="footer-container">
                <li class="footer-section">
                    <h3>INFORMATION</h3>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Our History</a></li>
                    </ul>
                </li>
    
                <li class="footer-section">
                    <h3>STUDENT HELP</h3>
                    <ul>
                        <li><a href="#">My Info</a></li>
                        <li><a href="#">F.A.Q</a></li>
                    </ul>
                </li>
    
                <li class="footer-section gallery">
                    <h3>GALLERY</h3>
                    <div class="insta-gallery">
                        <img src="~/uploads/home/img1.jpg" alt="Gallery 1">
                        <img src="~/uploads/home/img2.jpg" alt="Gallery 2">
                        <img src="~/uploads/home/img3.jpg" alt="Gallery 3">
                        <img src="~/uploads/home/img4.jpg" alt="Gallery 4">
                        <img src="~/uploads/home/img5.jpg" alt="Gallery 5">
                        <img src="~/uploads/home/img6.jpg" alt="Gallery 6">
                    </div>
                </li>
    
                <li class="footer-section contact">
                    <h3>CONTACT</h3>
                    <p>Cong Hoa Garden, Ward 12, Tan Binh District</p>
                    <p>Phone: 028.7300.6622</p>
                    <p>Email: <a href="#">acad.gre.hcm@fe.edu.vn</a></p>
                </li>
            </ul>
            <div class="copyright">© 2025 Greenwich.edu.vn. All Rights Reserved</div>
        </footer>
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const STATUS = {
                OPEN: 'is-open'
            }
            //Select Elements
            const menuBtn = document.querySelector('.btn-menu')
            const headerNav = document.querySelector('.header-top')
            if(!menuBtn) return


            //Event Listener
            menuBtn.addEventListener('click', handleOpenMenu)

            function handleOpenMenu() {
                headerNav.classList.add(STATUS.OPEN)
            }

            function handleCloseMenu() {
                headerNav.classList.remove(STATUS.OPEN)
            }

            document.addEventListener('click', function(event) {
                if(!headerNav.contains(event.target) && !menuBtn.contains(event.target)) {
                    handleCloseMenu()
                }
            })
        })
    </script>
</body>
</html>
