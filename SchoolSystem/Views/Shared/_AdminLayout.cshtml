<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - SchoolSystem</title>
    <!--FontAwesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!--FontAwesome-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/SchoolSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />

</head>
<body>
    <!-- Main Layout -->
    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h1 class="project-link">
                <a asp-area="" asp-controller="Home" asp-action="Index">SchoolSystem</a>
            </h1>
            <ul class="menu-list">
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i>Home
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Account" asp-action="Excel">
                        <i class="fa-solid fa-pen-to-square"></i>Import/Export
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Account" asp-action="Register">
                        <i class="fa-solid fa-pen-to-square"></i>Register User
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Account" asp-action="ListUsers">
                        <i class="fa-solid fa-list"></i>List Users
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Role" asp-action="CreateRole">
                        <i class="fa-solid fa-pen-to-square"></i>Create Role
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Role" asp-action="ListRoles">
                        <i class="fa-solid fa-list"></i>List Roles
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Document" asp-action="Index">
                        <i class="fa-solid fa-file"></i>Documents
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" asp-area="" asp-controller="Groups" asp-action="Index">
                        <i class="fa-solid fa-user-group"></i>Groups Manage
                    </a>
                </li>
            </ul>
            <!--Divider line-->
            <hr class="sidebar-divider" />
            <div class="bottom-menu">
                <ul class="menu-list">
                    <li class="menu-item">
                        <a class="menu-link" asp-area="" asp-controller="Account" asp-action="ViewProfile">
                            <i class="fa-solid fa-user"></i>View Profile
                        </a>
                    </li>
                    <li class="menu-item">
                        <a class="menu-link" asp-action="Logout" asp-controller="Account">
                            <i class="fa-solid fa-right-from-bracket"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Right Section -->
        <div class="right-section">
            <!-- Header -->
            <header class="header">
                <div class="header-right">
                    <partial name="_LoginPartial" />
                </div>
            </header>

            <!-- Main Content -->
            <main class="content-area">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="admin-footer">
                <div class="container">
                    &copy; 2025 - SchoolSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* signalr libary*@
    @* minimize code: use in prod *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    @* readable code: use in test/dev *@
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.js"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
