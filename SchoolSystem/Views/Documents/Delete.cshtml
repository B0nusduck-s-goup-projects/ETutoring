@model SchoolSystem.Models.Document

@{
    ViewData["Title"] = "Delete Document";
}

<div class="container">
    <h2>Delete Document</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this document?</h4>
    </div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text">@Model.Description</p>
            <p class="text-muted">Upload Date: @Model.UploadDate.ToString("MMM dd, yyyy HH:mm")</p>
        </div>
    </div>
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>