@model SchoolSystem.Models.Document

@{
    ViewData["Title"] = "Document Details";
}

<div class="container">
    <h2>Document Details</h2>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text">@Model.Description</p>
            <p class="text-muted">Uploaded by: @Model.User.UserName</p>
            <p class="text-muted">Upload Date: @Model.UploadDate.ToString("MMM dd, yyyy HH:mm")</p>
            <a href="@Model.FilePath" class="btn btn-primary" target="_blank">Download Document</a>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>