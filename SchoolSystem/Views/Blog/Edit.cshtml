@using SchoolSystem.ViewModels
@model BlogVM

@{
    ViewData["Title"] = "Edit Blog";
}

<h2>Edit Blog</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image:</label>
        @if (!string.IsNullOrEmpty(Model.ExistingImage))
        {
            <div>
                <img src="@Model.ExistingImage" width="200" />
            </div>
        }
    </div>

    <div class="form-group">
        <label asp-for="Image">Upload New Image:</label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update Blog</button>
    <a asp-action="ListBlogs" class="btn btn-secondary">Cancel</a>
</form>

