@using SchoolSystem.ViewModels
@model BlogVM

@{
    ViewData["Title"] = "Edit Blog";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="blog-bg-image">
    <div class="overlay"></div>
    <div class="blog-text">
        <h1>Edit Blog</h1>
    </div>
</div>

<div class="backPage">
    <a asp-action="Index">Back</a>
</div>

<section class="container">
    <div class="blog-form">
        <h2>Edit Blog</h2>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" id="title" name="title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" id="content" name="content" required></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Current Image:</label>
                @if (!string.IsNullOrEmpty(Model.ExistingImage))
                {
                    <div>
                        <img src="@Model.ExistingImage" width="200" />
                    </div>
                }
            </div>

            <div class="form-group">
                <label asp-for="Image">Upload New Image:</label>
                <input asp-for="Image" type="file" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Update Blog</button>
            <a asp-action="ListBlogs" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>