@model SchoolSystem.ViewModels.BlogVM

@{
    ViewData["Title"] = "Write a Blog";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="blog-bg-image">
    <div class="overlay"></div>
    <div class="blog-text">
        <h1>Write a Blog</h1>
    </div>
</div>

<div class="backPage">
    <a asp-action="Index">Back</a>
</div>

<section class="container">
    <div class="blog-form">
        <h2>New Blog Post</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data" onsubmit="cleanContent()">
            <div class="form-group">
                <label>Title</label>
                <input asp-for="Title" id="title" name="title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Content</label>
                <textarea asp-for="Content" id="content" name="content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Image (Optional)</label>
                <input type="file" asp-for="Image" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </div>
</section>

